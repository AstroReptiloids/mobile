<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:enabled="false"
            android:text="@string/scheduling_button_text"
            app:layout_constraintBottom_toTopOf="@+id/speeches_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <Button
            android:id="@+id/speeches_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:enabled="false"
            android:text="@string/speeches_button_text"
            app:layout_constraintBottom_toTopOf="@id/chat_map_button"
            app:layout_constraintEnd_toEndOf="@id/schedule_button"
            app:layout_constraintStart_toStartOf="@id/schedule_button"
            app:layout_constraintTop_toBottomOf="@id/schedule_button" />

        <Button
            android:id="@+id/chat_map_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/chat_map_button_text"
            app:layout_constraintBottom_toTopOf="@id/partners_button"
            app:layout_constraintEnd_toEndOf="@id/schedule_button"
            app:layout_constraintStart_toStartOf="@id/schedule_button"
            app:layout_constraintTop_toBottomOf="@id/speeches_button" />

        <Button
            android:id="@+id/partners_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:enabled="false"
            android:text="@string/partners_button_text"
            app:layout_constraintEnd_toEndOf="@id/schedule_button"
            app:layout_constraintStart_toStartOf="@id/schedule_button"
            app:layout_constraintTop_toBottomOf="@id/chat_map_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>